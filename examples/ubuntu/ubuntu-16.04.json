      "insecure_connection": "true",

      "vm_name": "example-ubuntu",
      "host":     "esxi-1.vsphere65.test",

      "guest_os_type": "ubuntu64Guest",

      "ssh_username": "jetbrains",
      "ssh_password": "jetbrains",

      "CPUs":             1,
      "RAM":              1024,
      "RAM_reserve_all": true,

      "disk_controller_type":  "pvscsi",
